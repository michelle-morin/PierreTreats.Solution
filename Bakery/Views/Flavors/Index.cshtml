@{
  Layout = "_Layout";
}

@using Bakery.Models;
@model List<Bakery.Models.Flavor>;

<h1>FLAVORS</h1>

@if (@Model.Count == 0)
{
  <h4>no flavors added yet</h4>
} 
else
{
  @foreach (Flavor flavor in Model)
  {
    <p>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</p>
  }
}

@Html.ActionLink("ADD FLAVOR", "Create", "Flavors", null, new { @class="btn-block" })